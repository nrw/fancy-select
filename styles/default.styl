@import 'nib'

C1 = #178ee9
C2 = #fff
C3 = rgba(black, 0.7)

.fancy-select
  width 100%
  box-sizing border-box
  position relative

  .background
    box-sizing border-box
    border 1px solid #ccc
    box-shadow inset 0 1px 1px rgba(black, .1)
    padding 0 .2em

  input[type=text]
    min-height 2em
    margin-left 0.2em

  .grouplabel
    font-weight bold
    display block
    padding 0.4em 0.8em
    border-top 1px solid #eee
    font-size 0.9em
    color #333

  .listbox
    border 1px solid #ddd
    border-top-width 0
    width 100%
    box-sizing border-box
    absolute top 100% left 0
    background white

  .listitem
    // border-width 10px
    box-shadow 0 1px 1px rgba(black, .3)
    border 1px solid darken(C1, 20%)
    color C2
    text-shadow 0 -1px 0 C3
    border-radius 2px
    background-color C1
    background-image linear-gradient(bottom, C1, lighten(C1, 20%))
    padding 0.3em 0.8em
    margin 0 0.2em 0 0

  .option
    padding 0.4em 0.8em
    color #333

  .focused
    background lighten(C1, 90%)
