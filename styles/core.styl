
.fancy-select
  .background
    border 0px solid black
    background #fee
    width 100%

  input[type=text]
    font inherit
    border-width 0
    background transparent
    outline 0
    min-height 2.8em
    min-width 5em
    max-width 100%
    box-sizing border-box

  .listitem
    border-width 10px
    padding 0.4em 0.8em
    display inline-block
    margin 0.2em
    background #faa

  .list
    display inline-block

  .option
    outline 0
    border-bottom 1px solid #eee
    padding 0.4em 0.8em
    display block
    margin 0

  .focused
    background #fffafa
